<?xml version="1.0" encoding="utf-8"?>
<com.justalk.cloud.juscall.CallIncomingSlideView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/call_incoming_slide_bg" >

    <ImageView
        android:id="@+id/call_incoming_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/call_incoming_gap_size"
        android:background="@drawable/call_incoming_anim_bg"
        android:visibility="invisible" />
    
    <com.justalk.cloud.juscall.CircleButton
        android:id="@+id/call_answer"
        android:layout_width="@dimen/call_large_circle_button_size"
        android:layout_height="@dimen/call_large_circle_button_size"
        android:layout_marginLeft="@dimen/call_incoming_gap_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />
    
    <RelativeLayout
        android:id="@+id/short_track"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/call_answer" >

        <com.justalk.cloud.juscall.CircleButton
            android:id="@+id/call_answer_camera_off"
            android:layout_width="@dimen/call_large_circle_button_size"
            android:layout_height="@dimen/call_large_circle_button_size"
            android:layout_marginLeft="@dimen/call_incoming_gap_size"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />

        <com.justalk.cloud.juscall.CircleButton
            android:id="@+id/call_decline"
            android:layout_width="@dimen/call_large_circle_button_size"
            android:layout_height="@dimen/call_large_circle_button_size"
            android:layout_marginRight="@dimen/call_incoming_gap_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
             />
    </RelativeLayout>

</com.justalk.cloud.juscall.CallIncomingSlideView>
